    <div class="container-fluid">
        <div id="articles">
                {{#if articles}}
                <ul>
                {{#each articles}}
                    <li>
                        <div class="card article-card"> 
                                 <img src="{{this.img}}" class="img-thumbnail m-auto">

                                 <a href="{{this.link}}" target="_blank">{{this.title}}</a>
                             <p class="card-text">
                                 {{this.summary}} <br>
                                 Source: {{this.source}}<br>
                                 <span class="add-comment" data-id="{{this._id}}" data-toggle="modal" data-target="#exampleModal">
                                     Comment
                                 </span> / 
                                 <span class="toggle-comments" state="hidden" data-id="{{this._id}}">View Comments</span>
                                 <div class="comments-container" data-id="{{this._id}}"></div>
                             </p>
                         </div>
                     </li>
                {{/each}}
            </ul>
                {{else}}
                <div class="container">
                    <div class="jumbotron">
                        <h1>No articles currently scraped! </h1>
                    </div>
                </div>
                {{/if}}
        </div>
    <div id="comments">
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <p class="modal-title mb-0"></p>
                        <button type="button" class="btn" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
